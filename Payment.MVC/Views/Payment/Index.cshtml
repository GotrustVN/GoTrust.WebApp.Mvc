@{
    ViewData["Title"] = "Payment for order";
}
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<link href="~/css/select2-theme-bootstrap4/dist/select2-bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

@using Payment.MVC.Models
@using Payment.Data.Entities
@model OrderDetailViewModel
<div class="row w-100 m-0">
    <form asp-action="PaymentRedirect" asp-controller="Payment" class="w-100">
        <div class="card w-100">
            <div class="card-header">
                <h3 class="card-title">Thông tin đơn hàng</h3>
            </div>
            <div class="card-body">
                <input type="hidden" asp-for="orderId" />
                <div class="form-group">
                    <label>Loại hàng hóa</label>
                    <select asp-for="orderTypeCode" class="select form-control"
                            asp-items="@(new SelectList(Model.orderTypes,"code","name"))"></select>
                </div>
                <div class="form-group">
                    <label>Số lượng</label>
                    <input class="form-control" asp-for="amount" />
                </div>
                <div class="form-group">
                    <label>Nội dung thanh toán</label>
                    <textarea class="form-control" asp-for="orderDescription" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label>Ngân hàng</label>
                    <select asp-for="bankCode" class="select form-control"
                            asp-items="@(new SelectList(Model.banks,"bankCode","bankName"))"></select>
                </div>
                <div class="form-group">
                    <label>Ngôn ngữ</label>
                    <select asp-for="languageCode" class="select form-control"
                            asp-items="@(new SelectList(Model.languages,"code","name"))"></select>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-10"></div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">Thanh toán</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    $(document).ready(() => {
        $('.select').select2({
            theme: "bootstrap",
            placeholder: '-- Root --',
            allowClear: true
        });
    })
</script>
