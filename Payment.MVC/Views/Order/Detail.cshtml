@using Payment.MVC.Models
@using Payment.Data.Entities
@model OrderInfor

<div>
    <h4>Chi tiết</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã thanh toán:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.orderId)
        </dd>
        <dt class="col-sm-2">
            Loại giao dịch:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type.name)
        </dd>
        <dt class="col-sm-2">
            Nội dung:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.orderDescription)
        </dd>
        <dt class="col-sm-2">
            Số tiền:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.amount)
        </dd>
        <dt class="col-sm-2">
            Ngân hàng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bank.bankName)
        </dd>
        <dt class="col-sm-2">
            Trạng thái:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.status.name)
        </dd>
        <dt class="col-sm-2">
            Mã giao dịch:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.transactionNo)
        </dd>
        <dt class="col-sm-2">
            Mã phản hồi:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.responseCode)
        </dd>
        <dt class="col-sm-2">
            Thông báo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.message)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Back</a>
</div>
