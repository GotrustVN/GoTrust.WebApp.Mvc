@{
    ViewData["Title"] = "Thông tin bảo hiểm khách hàng";
}

@model HealthInsuranceOrderDetailViewModel
<div>
    <h4>Thông tin khách hàng</h4>
    <hr />
    <dl class="row m-0">
        <dt class="col-sm-2">
            Mã khách hàng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.buyerCode)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Họ tên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.buyerName)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Loại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.buyerType)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Điện thoại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.buyerPhone)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.buyerEmail)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Giới tính:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.buyerGender)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Ngày sinh:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.buyerDateOfBirth)
        </dd>
    </dl>
</div>

<div>
    <h4>Thông tin bảo hiểm</h4>
    @foreach (var detail in Model.details)
    {
        <hr />
        <dl class="row m-0">
            <dt class="col-sm-2">
                Mã:
            </dt>
            <dd class="col-sm-10">
                @detail.customerCode
            </dd>
        </dl>
        <dl class="row m-0">
            <dt class="col-sm-2">
                Người bảo hiểm:
            </dt>
            <dd class="col-sm-10">
                @detail.customerName
            </dd>
        </dl>
        <dl class="row m-0">
            <dt class="col-sm-2">
                Quan hệ người mua:
            </dt>
            <dd class="col-sm-10">
                @detail.relationship.name
            </dd>
        </dl>
        <dl class="row m-0">
            <dt class="col-sm-2">
                Điện thoại:
            </dt>
            <dd class="col-sm-10">
                @detail.customerPhone
            </dd>
        </dl>
        <dl class="row m-0">
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @detail.customerEmail
            </dd>
        </dl>
        <dl class="row m-0">
            <dt class="col-sm-2">
                Giới tính:
            </dt>
            <dd class="col-sm-10">
                @detail.customerGender
            </dd>
        </dl>
        <dl class="row m-0">
            <dt class="col-sm-2">
                Ngày sinh:
            </dt>
            <dd class="col-sm-10">
                @detail.customerDateOfBirth.ToString("dd/MM/yyyy")
            </dd>
        </dl>
        <dl class="row m-0">
            <dt class="col-sm-2">
                Loại:
            </dt>
            <dd class="col-sm-10">
                @detail.customerType
            </dd>
        </dl>
    }
</div>

<div class="row">
    <div class="col-6 col-md-1">
        <a href="https://gotrust.vn" type="button" class="btn btn-dark w-100">
            Thoát
        </a>
    </div>
    <div class="col-6 col-md-1">
        <a asp-action="Payment" asp-route-code="@Model.code" class="btn btn-success w-100 text-white">
            Thanh toán
        </a>
    </div>
</div>
