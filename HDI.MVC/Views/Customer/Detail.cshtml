@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

@model CustomerDetailViewModel

<div>
    <h4>Thông tin khách hàng</h4>
    <hr />
    <dl class="row m-0">
        <dt class="col-sm-2">
            Mã khách hàng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.code)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Họ tên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Loại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.type.name)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Điện thoại:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Số fax:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fax)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Địa chỉ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fullAddress)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Giới tính:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gender.name)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Ngày sinh:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dateOfBirth)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            CMNND/CCCD:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.identityNumber)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Ngày cấp:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.identityDate)
        </dd>
    </dl>
    <dl class="row m-0">
        <dt class="col-sm-2">
            Nơi cấp:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.identityPlace)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-6 col-md-1">
        <a asp-action="Index" type="button" class="btn btn-dark w-100">
            <i class="far fa-window-close"></i>
        </a>
    </div>
    <div class="col-6 col-md-1">
        <a asp-action="Edit" asp-route-code="@Model.code" class="btn btn-success w-100 text-white">
            <i class="fas fa-pen"></i>
        </a>
    </div>
</div>